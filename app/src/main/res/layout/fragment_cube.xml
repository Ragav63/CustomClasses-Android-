<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cubeanimation.CubeFragment">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/white"
        android:fitsSystemWindows="true"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


    <LinearLayout
        android:id="@+id/focus_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <FrameLayout android:id="@+id/cubeAnimationContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@android:color/transparent">

            <!-- Front Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mainContentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mainImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner2"
                        android:contentDescription="Main image"/>

                    <Button
                        android:id="@+id/loginOverlayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_margin="16dp"
                        android:elevation="10dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black" />

                    <TextView
                        android:id="@+id/greetingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:visibility="gone" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Back Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/nextContentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="20dp"
                android:visibility="invisible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/nextImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Next image" />

                    <Button
                        android:id="@+id/nextLoginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_margin="16dp"
                        android:elevation="10dp"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:backgroundTint="@color/black"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/greetingTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_margin="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:visibility="gone" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>


    </LinearLayout></androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>